@model IEnumerable<BookList>
@{
    <h1> Books List </h1>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> Book List </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="BookList" asasp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> &nbsp; Add New Book
                </a>
            </div>
        </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Book Title    
                </th>
                <th>
                    Author
                </th>
                <th>
                    Published Year
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="35%">
                        @obj.Title
                    </td>
                    <td width="35%">
                        @obj.Author
                    </td>
                    <td width="40%">
                        @obj.PublisedYear
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </div>

}
